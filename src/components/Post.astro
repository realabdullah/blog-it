---
interface Props {
  style?: string;
  post: {
    title: string;
    image: string;
    author: string;
    date: string;
    description: string;
  }
}

const { style, post } = Astro.props;
---

<li class:list={["post", { row: style === "row" }]}>
  <img src={post.image} alt={post.title} />
  <div class="post__details">
    <span class="post__details-date">{post.author} â€¢ {post.date}</span>
    <a href="/" class="post__details-title">{post.title}</a>
    <p class="post__details-desc">{post.description}</p>
  </div>
</li>

<style lang="scss">
  .post {
    width: 100%;
    height: auto;

    img {
      width: 100%;
      height: 228px;
      object-fit: cover;
    }

    &__details {
      margin-top: 32px;
      display: flex;
      flex-direction: column;
      gap: 12px;

      &-date {
        font-size: 14px;
        font-weight: 600;
        line-height: 20px;
        color: #6941c6;
      }

      &-title {
        font-size: 24px;
        font-weight: 600;
        line-height: 32px;
        color: var(--main-text);

        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
      }

      &-desc {
        font-size: 16px;
        font-weight: 400;
        line-height: 24px;
        color: var(--sec-text);
      }
    }

    &.row {
      gap: 24px;
      display: grid;
      grid-template-columns: 54.05% 41.89%;

      @media screen and (max-width: 600px) {
        display: unset;
        grid-template-columns: unset;
      }

      img {
        width: 100%;
        height: 200px;
      }

      .post__details {
        margin-top: 0;
        gap: unset;

        &-date {
          display: block;
          margin-bottom: 12px;
        }

        &-title {
          font-size: 18px;
          font-weight: 600;
          line-height: 28px;
          color: var(--main-text);
          margin-bottom: 8px;
        }
      }
    }
  }
</style>
